#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    # Define the transition
    transition: FadeTransition()
    # And the screens
    MainScreen:
    AnotherScreen:
    
# What happens in the screens?
<MainScreen>:
    name: "main"
    # Define the button
    BoxLayout:
        size_hint: 0.5,0.1
        orientation: 'horizontal'
        Button:
            id: label2
            text: 'Open'
        Button:
            id: label3
            text: 'Nothing'
        Button:
            on_release: app.root.current = "other"
            id: label1
            text: 'Next Screen'
    # Add the action bar to the root widget
    ActionBar:
        # Location of the bar on the screen
        pos_hint: {'top':1}
        # Description of the elements in the bar
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'Action Bar'
                # Previous button. Help us to return to the last screen of the app
                with_previous: False
            ActionOverflow:
            ActionButton:
                text: 'Btn0'
            # Add three more buttons
            ActionButton:
                text: 'Btn1'
            ActionButton:
                text: 'Btn2'
            ActionButton:
                text: 'Btn3'
            ActionButton:
                text: 'Btn4'
            # Add three child buttons to ActionGroup
            ActionGroup:
                text: 'Group1'
                ActionButton:
                    text: 'Btn5'
                ActionButton:
                    text: 'Btn6'
                ActionButton:
                    text: 'Btn7'

        
# The other screen
<AnotherScreen>:
    name: "other"
    # Screen layout
    FloatLayout:
        # Button
        Button:
            #color: 0,1,0,1
            font_size: 15
            size_hint: 0.2,0.1
            text: "Back Home"
            on_release: app.root.current = "main" # This is the name given to the screen in <MainScreen>
            pos_hint: {"right":1, "top":1}  
        