 # File name: comiccreator.kv
<ComicCreator@Screen>:
	name: 'comicscreen'
# Three Anchor layout instances
	AnchorLayout: # This is the toolbox
		anchor_x: 'left'
		anchor_y: 'top'
		ToolBox:
			id: _tool_box
			size_hint: None, None
			width: 100
			# Adding functionality
			# The id with underscore before is intended to be used inside kv language, and the one without it in Python.
			# There is a distinction but they can be the same without generating any conflict
			drawing_space: _drawing_space
			comic_creator: root
	AnchorLayout: # This is the drawing space
		anchor_x: 'right'
		anchor_y: 'top'
		DrawingSpace:
			size_hint: None, None
			# The drawing space uses the ids to set its width and height from the widgets.
			# ROOT refers to the screen.
			width: root.width - _tool_box.width
			height: root.height - _general_options.height - _status_bar.height
			id: _drawing_space
			status_bar: _status_bar
			general_options: _general_options
			tool_box: _tool_box
	AnchorLayout: 
		anchor_x: 'center'
		anchor_y: 'bottom'
		# The box layout instance that organizes general options and the status bar
		BoxLayout: # General options layout
			orientation: 'vertical'
			GeneralOptions:
				id: _general_options
				size_hint: 1,None
				height: 48
				drawing_space: _drawing_space
				comic_creator: root
			StatusBar: # This is the status bar
				id: _status_bar
				size_hint: 1,None
				height: 24